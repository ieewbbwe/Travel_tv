<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_home_bg"
    tools:context="com.wisesoft.traveltv.ui.change.HomeChangeActivity">
    <!--head-->
    <include layout="@layout/layout_head_change"/>

    <com.tv.boost.widget.tablayout.TvTabLayout
        android:layout_below="@id/m_head_rl"
        android:layout_marginTop="8dp"
        android:id="@+id/m_main_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorResId="@color/bg_core"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorBackgroundColor="@color/bg_core"
        app:tabIndicatorBackgroundHeight="1px"
        app:tabMinWidth="160dp"
        app:tabScrollMode="fixed"
        app:tabGravity="center"
        app:tabPaddingBottom="12px"
        app:tabTexSize="22px"
        app:tabTextColor="@drawable/selector_tab_font_color"/>

    <FrameLayout
        android:layout_below="@id/m_main_tab"
        android:id="@+id/m_main_container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
