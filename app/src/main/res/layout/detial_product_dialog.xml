<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--图片-->
        <ImageView
            android:id="@+id/m_dialog_iv"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="250dp"
            android:src="@mipmap/ic_img_item_default" />

        <!--信息-->
        <RelativeLayout
            android:layout_below="@id/m_dialog_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/m_dialog_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高原手抓乳牛排"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/m_dialog_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/m_dialog_title_tv"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/m_dialog_title_tv"
                android:text="86元/份"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:id="@+id/m_dialog_introduce_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_dialog_title_tv"
                android:layout_marginTop="8dp"
                android:text="菜评介绍：xxxxxxxxxx"
                android:ellipsize="end"
                android:textSize="@dimen/text_small_size" />
        </RelativeLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:text="按任意键返回上一级"
            android:textSize="@dimen/text_smallest_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>