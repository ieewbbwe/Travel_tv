<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wisesoft.traveltv"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false"/>
    <uses-feature
        android:name="android.software.leanback"
        android:required="true"/>

    <application
        android:name=".NApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoadingActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.eat.DeliciousActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ui.play.AmusementActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ui.stay.StayActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ui.traffic.TrafficActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>